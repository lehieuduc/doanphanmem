<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.doanphanmem.Admin.ListOrderForAdmin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOnPrimary"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNamePageAdmin"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Danh sách đơn hàng"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/colorOnPrimary">

        </TextView>

        <ImageView
            android:id="@+id/imgCartInInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="IconHomeAdminOnclickListener"
            app:srcCompat="@drawable/baseline_home_34_white"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginRight="6dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvAllOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />


</LinearLayout>